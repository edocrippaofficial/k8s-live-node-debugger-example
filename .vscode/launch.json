{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to k8s remote Node.js",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "restart": true,
      "address": "0.0.0.0",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/home/node/app"
    }
  ]
}
